{
  "name": "minichrome",
  "version": "0.0.1",
  "author": "Connor Prussin <connor@prussin.net>",
  "license": "MIT",
  "main": "index.js",
  "dependencies": {
    "babel-minify": "^0.5.0",
    "electron": "3.0.0-beta.5",
    "electron-packager": "^12.1.2"
  },
  "engines": {
    "node": "^10.11.0"
  },
  "scripts": {
    "start": "electron .",
    "clean": "rm -rf bower_components node_modules output build",
    "dependencies:install": "bower install && yarn install",
    "build": "yarn dependencies:install && pulp build",
    "package": "yarn build && ./pkg/build",
    "pkgbuild": "yarn package && ./pkg/pkgbuild/build"
  }
}
